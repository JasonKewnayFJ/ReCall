<Window x:Class="ReCall___.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:ReCall___"
        mc:Ignorable="d"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Title="MainWindow" Height="750" MaxHeight="750" MinHeight="750" Width="500">
    <Border CornerRadius="10" Background="#10161D" Padding="10" MouseDown="Border_MouseDown">
        <Grid ShowGridLines="True">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="750" />
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" VerticalAlignment="Center" >
                <TextBlock Text="ReCall" Foreground="White" FontFamily="Verdana" FontSize="30" Margin="10 0 0 0" />
            </StackPanel>

            <StackPanel Orientation="Horizontal" Grid.Row="0" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="5" >
                <Border CornerRadius="10" Background="#2C3E50">

                    <Button Content="▾" Click="HideWindow" x:Name="HideBTN" Background="Transparent" Foreground="White" BorderBrush="black" BorderThickness="0" ToolTip="Hide it" Style="{StaticResource MaterialDesignFlatButton}"/>
                    
                    
                </Border>



                <Border CornerRadius="10" Background="#2C3E50" Margin="5 0 0 0">
                    <Button Content="🞬" Click="CloseWindow" x:Name="CloseBTN"  Background="Transparent" Foreground="White" BorderBrush="black" BorderThickness="0" ToolTip="Shut it down"/>
                </Border>

            </StackPanel>



            <Border Grid.Row="1" Height="745" Background="#2C3E50" CornerRadius="10" Margin="10" Padding="15">
            <StackPanel>
                    <Border CornerRadius="10" Background="White" Padding="5" Margin="0 0 0 3">
                        <StackPanel>
                            <TextBlock Text="Сurrent clipboard content:" HorizontalAlignment="Left" TextAlignment="Left" Background="Transparent" FontFamily="Arial" FontWeight="Bold"/>
                            <Separator Background="Black"/>
                            <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled" >
                                <Button x:Name="Note" Content="{Binding CurrentBoardNote}" Height="70" Padding="10" VerticalAlignment="Stretch" VerticalContentAlignment="Stretch" Margin="10">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Setter Property="Background" Value="#2C3E50"/>
                                            <Setter Property="Foreground" Value="White"/>
                                            <Setter Property="BorderThickness" Value="0"/>
                                            <Setter Property="Padding" Value="10"/>
                                            <Setter Property="FontSize" Value="14"/>
                                            <Setter Property="Cursor" Value="Hand"/>
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="Button">
                                                        <Border Background="{TemplateBinding Background}" CornerRadius="12">
                                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                        </Border>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#1F2935"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>


                            </ScrollViewer>
                            
                        </StackPanel>

                    </Border>
                    <Border CornerRadius="10" Background="White" Padding="5" Margin="0 0 0 3">
                        <StackPanel>
                            <TextBlock Text="Previous clipboard content:"  HorizontalAlignment="Stretch" TextAlignment="Left" Background="Transparent" FontFamily="Arial" FontWeight="Bold"/>
                            <Separator Background="Black"/>
                            <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled">


                                <Button x:Name="PrevNote" Content="{Binding PreviousBoardNote}" Height="70" Padding="10" VerticalAlignment="Stretch" VerticalContentAlignment="Stretch" Margin="10">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Setter Property="Background" Value="#2C3E50"/>
                                        <Setter Property="Foreground" Value="White"/>
                                        <Setter Property="BorderThickness" Value="0"/>
                                        <Setter Property="Padding" Value="10"/>
                                        <Setter Property="FontSize" Value="14"/>
                                        <Setter Property="Cursor" Value="Hand"/>
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}" CornerRadius="12">
                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#1F2935"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                    </Button.Style>
                                </Button>
                            
                            
                            
                            </ScrollViewer>
                            
                        </StackPanel>

                    </Border>
                
                    <Border Height="370" Grid.Row="1" CornerRadius="10" Background="White" Padding="10" Margin="0 0 0 3">

                        <StackPanel>
                        <StackPanel>
                        <TextBlock Text="Clipboard History:" FontFamily="Arial" FontWeight="Bold"/>
                            
                        </StackPanel>
                            <Separator Background="Black"/>
                            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Stretch">
                        <ListBox ItemsSource="{Binding NotesList}" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" ScrollViewer.CanContentScroll="True" Height="290" Margin="0 0 0 2" ScrollViewer.VerticalScrollBarVisibility="Hidden">
                            <ListBox.ItemContainerStyle>
                                <Style TargetType="ListBoxItem">
                                    <Setter Property="HorizontalContentAlignment" Value="Center" />
                                    <Setter Property="VerticalContentAlignment" Value="Center" />
                                    <Setter Property="Margin" Value="3" />
                                            <Setter Property="Height" Value="70"/>
                                            <Setter Property="Foreground" Value="White"/>
                                            <Setter Property="Padding" Value="12" />
                                            <Setter Property="Cursor" Value="Hand"/>
                                            <Setter Property="ToolTip" Value="Click to Copy"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="ListBoxItem">
                                                <Border x:Name="Bd"
                                                Background="#2C3E50"
                                                CornerRadius="5"
                                                BorderThickness="1"
                                                BorderBrush="Transparent"
                                                Padding="{TemplateBinding Padding}"
                                                SnapsToDevicePixels="true">
                                                                    <ContentPresenter 
                                                HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                                SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" />
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter TargetName="Bd" Property="Background" Value="#1F2935" />
                                                        <Setter Property="Foreground" Value="White" />
                                                    </Trigger>
                                                    <Trigger Property="IsSelected" Value="True">
                                                                <Setter TargetName="Bd" Property="Background" Value="#10161D" />
                                                        <Setter Property="Foreground" Value="White" />
                                                    </Trigger>
                                                    <Trigger Property="IsEnabled" Value="False">
                                                        <Setter Property="Foreground" Value="Gray" />
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <EventSetter Event="MouseLeftButtonUp" Handler="ListBoxItem_MouseLeftButtonUp" />
                                </Style>
                            </ListBox.ItemContainerStyle>
                        </ListBox>
                            
                        </StackPanel>
                    <Button Content="Clear"
                        ToolTip="Clear all notes"
                        Click="ClearHistory"
                        Background="#1F2935" Height="40"
                        Foreground="White" Margin="0">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Background" Value="#2C3E50"/>
                                        <Setter Property="Foreground" Value="White"/>
                                        <Setter Property="BorderThickness" Value="0"/>
                                        <Setter Property="FontSize" Value="14"/>
                                        <Setter Property="Cursor" Value="Hand"/>
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}" CornerRadius="12">
                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#1F2935"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                    </Button>
                            
                        </StackPanel>


                    </Border>




                </StackPanel>
                
            </Border>
        </Grid>

    </Border>
</Window>
